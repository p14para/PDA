<TestScreen>:
    FloatLayout:
        canvas.before:
            Color:
                rgba: 1, 1, 1, 1  # White background
            Rectangle:
                size: self.size
                pos: self.pos

        Label:
            text: 'Welcome to the Test Screen!'
            font_size: 36
            color: 0, 0, 0, 1  # Black text
            size_hint: 0.5, 0.2
            pos_hint: {'center_x': 0.5, 'center_y': 0.8}

        Button:
            text: 'Test Button'
            size_hint: 0.3, 0.1
            pos_hint: {'center_x': 0.5, 'center_y': 0.5}
            background_color: 0, 0.5, 1, 1  # Blue background
            on_press: root.test_button_pressed()
