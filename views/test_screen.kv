<TestScreen>:
    BoxLayout:
        orientation: 'vertical'
        padding: 20
        spacing: 20
        canvas.before:
            Color:
                rgba: 1, 1, 1, 1  # White background
            Rectangle:
                size: self.size
                pos: self.pos

        Label:
            text: 'Welcome to the Test Screen!'
            font_size: 36
            color: 0, 0, 0, 1  # Black text
            size_hint_y: None
            height: 100

        BoxLayout:
            orientation: 'horizontal'
            spacing: 20

            Button:
                text: 'Button 1'
                background_color: 0, 0.5, 1, 1  # Blue background
                color: 1, 1, 1, 1  # White text
                size_hint_y: None
                height: 50
                width: 200

            Button:
                text: 'Button 2'
                background_color: 1, 0.5, 0, 1  # Orange background
                color: 1, 1, 1, 1  # White text
                size_hint_y: None
                height: 50
                width: 200

        Label:
            text: 'Another Label'
            font_size: 24
            color: 0, 0, 0, 1  # Black text
            size_hint_y: None
            height: 50
